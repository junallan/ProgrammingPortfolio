@page
@model Recipes.Pages.Categories.ListModel
@{
}

<h1>Categories</h1>

<table class="table">
    @foreach (var category in Model.Categories)
    {
    <tr>
        <td>@category.Name</td>
        <td><a class="btn btn-lg" asp-page="./Edit" asp-route-categoryId="@category.Id"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
    </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<div>@Model.Message</div>
