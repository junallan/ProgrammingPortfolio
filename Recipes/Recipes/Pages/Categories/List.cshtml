@page
@model Recipes.Pages.Categories.ListModel
@{
}

<h1>Categories</h1>
<div class="alert-info">@Model.Message</div>
<table class="table">
    @foreach (var category in Model.Categories)
    {
    <tr>
        <td>@category.Name</td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Detail" asp-route-categoryId="@category.Id"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Edit" asp-route-categoryId="@category.Id"><i class="glyphicon glyphicon-edit"></i></a></td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Delete" asp-route-categoryId="@category.Id"><i class="glyphicon glyphicon-trash"></i></a></td>
    </tr>
    }
</table>
<div class="form_action_button">
    <a asp-page=".\Edit" class="btn btn-primary">Add New</a>
</div>


 
