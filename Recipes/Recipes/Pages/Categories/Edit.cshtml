@page "{categoryId?}"
@model Recipes.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>@Model.FormTitle</h1>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Category.Name"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


<a asp-page="./List" class="btn btn-default">All Categories</a>