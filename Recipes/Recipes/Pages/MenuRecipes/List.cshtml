@page
@model Recipes.Pages.MenuRecipes.ListModel
@{
    ViewData["Title"] = "Menu Recipe(s)";
}

<h1>Recipes</h1>
<div class="alert-info">@TempData["Message"]</div>
<table class="table">
    @foreach (var recipe in Model.Recipes)
    {
    <tr>
        <td style="width:25%">@recipe.RecipeName</td>
        <td style="width:25%">@recipe.CategoryName</td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Detail" asp-route-recipeId="@recipe.RecipeId"><i class="glyphicon glyphicon-zoom-in"></i></a></td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Edit" asp-route-recipeId="@recipe.RecipeId"><i class="glyphicon glyphicon-edit"></i></a></td>
        <td class="list_style"><a class="btn btn-lg" asp-page="./Delete" asp-route-recipeId="@recipe.RecipeId"><i class="glyphicon glyphicon-trash"></i></a></td>
    </tr>
    }
</table>
<div class="form_action_button">
    <a asp-page=".\Edit" class="btn btn-primary">Add New</a>
</div>